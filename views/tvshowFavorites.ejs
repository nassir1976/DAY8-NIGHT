<body id="favorite-page">
    <h1 id="recipe-h1" > Favorite Tv-Show List </h1>
    <ul>
        <div>
    <li><a id="tvshowsearch-btn" href='/tvshowSearch'> Go to Search page </a></li>
    </div>
   <li><a id="home-btn" href='/'> Go to Home Page </a></li>
    </ul>
    <ul class="tv-show">

 <main>
     
        <%data.forEach(show=> {%>
            <section>

            <img class="tvshow" src="<%=show.img%>" alt="<%=show.title%>">
            <h3 id="tvshow-title"><%=show.name%></h3>
            <div id="tvshow-summary"><%-show.summary%></div>
            <form action="/delete/<%=show.id%>?_method=DELETE" method="POST">
            <button id="delete-btn1" type="submit">Delete Show</button>
            </form>
        </section>
            <%})%>

</main>
</body>
</html>
