    <main>
        
        <%values.forEach(show=> {%>
            <section id= "main-container">
            <img class="tvshow" src="<%=show.image%>" alt="<%=show.title%>">
            <h3 id="tvshow-title"><%=show.name%></h3>
            <!-- <div id="tvshow-summary"><%-show.summary%></div> -->
            <form action="/saved" method="POST">
                <button id="Database-tv1">Add to Favorites</button>
                <input type="hidden" name="image" value="<%=show.image%>">
                <input type="hidden" name="url" value="<%=show.url%>">
                <input type="hidden" name="tvshow_name" value="<%=show.name%>">
                <!-- <input id="summary" type="hidden" name="summary" value="<%=show.summary%>"> -->
                <input type="hidden" name="searchterm" value="<%=searchterm%>">
            </form>
        </section>
            <%})%>
